.con-upload
  width: 100%
  position relative
.con-input-upload
  padding: 10px;
  background: rgb(240,240,240)
  width: 100%;
  border-radius: 10px
  position relative
  input
    position: absolute
    width: 100%;
    height 100%;
    opacity 0;
    left 0px
    top: 0px
  span
    min-width: 200px;
    display block
    text-align: center
    margin: 0px !important
    padding: 0px !important

.con-img-upload
  width: 100%
  background:rgb(255,255,255)
  position relative
  border-radius: 10px;
  margin-top: 5px;
  padding-right: 5px;
  box-sizing: border-box
  column-gap: 5px;

  .img-upload
    backface-visibility: hidden
    float left
    overflow hidden
    border-radius: 10px;
    background: rgba(0,80,0,.5)
    background: rgb(255,255,255)
    box-shadow: 0px 5px 20px 0px rgba(0,0,0,.1)
    transition: all .3s ease;
    display flex
    align-items: center
    justify-content: center
    flex-direction: column
    width: 200px;
    height 200px;
    margin: 5px
    position relative
    cursor pointer
    &.removeItem
      transition: all .3s !important;
      opacity 0 !important;
      width: 0px !important;
      visibility hidden
      margin: 0px !important;
    img
      filter: grayscale(0%)
      transition: all .3s ease;
      border-radius: 10px;
      max-width none
      position: absolute;
      left 50%
      top: 50%
      transform: translate(-50%,-50%)
    &:hover
      transform: scale(.99)
      box-shadow: 0px 0px 0px 0px rgba(0,0,0,.1)
      .btn-x-file
        opacity 1
        transform: translate(0%,0%)
    .btn-x-file
      display block
      position absolute
      top: -0px
      width: 80px;
      height 80px;
      padding: 0px;
      right 0px;
      margin: 0px;
      transform: translate(20%,-20%)
      background: transparent
      background-image: linear-gradient(45deg, rgba(0,0,0,0) 50%, $vs-colors[danger] 100%);
      // transform: rotate(45deg)
      opacity 0;
      border: 0px;
      cursor pointer
      transition: all .2s ease
      z-index 200;
      border-radius: 10px;
      i
        transition: all .2s ease
        position absolute
        top: 2px;
        right 2px;
        width: 30px;
        height 30px;
        display: flex
        align-items: center
        justify-content: center
        border-radius: 5px;
        // color: alpha($vs-colors[danger],.8)
        color: rgba(255,255,255,1)
        text-shadow: 0px 3px 10px rgba(0,0,0,.5);
      &:hover
        background-image: linear-gradient(45deg, rgba(0,0,0,0) 50%, $vs-colors[danger] 90%);
        i
          top: 6px;
          right 6px;
          border-radius: 50%;
          background: $vs-colors[danger]
        + img
          filter: grayscale(80%)


.upload-enter-active
  transition: all .7s ease !important
  animation: imageRebound .7s ease !important

