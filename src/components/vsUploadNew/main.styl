@keyframes imageRebound {
  0% {
    transform: scale(.4);
    border-radius: 30%;
  }
  40% {
    transform: scale(1.03);
    border-radius: 14px;
  }
  70% {
    transform: scale(.98);
    border-radius: 18px;
  }
  100% {
    transform: scale(1);
    border-radius: 10px;
  }
}
