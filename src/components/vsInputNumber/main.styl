.vs-input-number
  position relative
  display block
  display flex
  align-items: center
  justify-content: center
  margin: 5px 10px;
  background: rgb(245,245,245)
  padding: 2px;
  border-radius: 5px;
  &.isChangeValue
    input
      transform: translate(0,-2px)
      opacity .5
  input
    transition: all .2s ease;
    width: 40px;
    min-width 40px;
    border 0px
    text-align: center
    background: transparent
    padding: 4px;
    -moz-appearance: textfield;

  input[type=number]::-webkit-inner-spin-button,
  input[type=number]::-webkit-outer-spin-button
    -webkit-appearance: none;
    margin: 0;
  button
    min-width: 22px
    min-height: 22px
    padding: 0px
    margin: 0px
    display: block
    position relative
    border: 0px;
    border-radius: 5px;
    cursor pointer
    display: flex
    align-items: center
    justify-content: center
    transition: all .3s ease;
    color: rgba(255,255,255,1)
    backface-visibility hidden
    &:disabled
      opacity: .5 !important
    i
      font-size: .9rem


    &.btn-plus
      transform translate(10px)
      &:active
        transform scale(.9) translate(10px) !important
    &.btn-less
      transform translate(-10px)
      &:active
        transform scale(.9) translate(-10px) !important

  &.vs-input-number-size-medium
    input
      padding: 3px;
      font-size: .8rem
    button
      min-width: 19px
      min-height: 19px
      i
        font-size: .8rem
      &.btn-plus
        transform translate(8px)
        &:active
          transform scale(.9) translate(8px) !important
      &.btn-less
        transform translate(-8px)
        &:active
          transform scale(.9) translate(-8px) !important
  &.vs-input-number-size-small
    input
      padding: 2px;
      font-size: .7rem
    button
      min-width: 16px
      min-height: 16px
      i
        font-size: .7rem
      &.btn-plus
        transform translate(7px)
        &:active
          transform scale(.9) translate(7px) !important
      &.btn-less
        transform translate(-7px)
        &:active
          transform scale(.9) translate(-7px) !important
  &.vs-input-number-size-mini
    input
      padding: 1px;
      font-size: .6rem
    button
      min-width: 14px
      min-height: 14px
      i
        font-size: .6rem
      &.btn-plus
        transform translate(6px)
        &:active
          transform scale(.9) translate(6px) !important
      &.btn-less
        transform translate(-6px)
        &:active
          transform scale(.9) translate(-6px) !important
for colorx, i in $vs-colors
  .vs-input-number-{colorx}
    button
      background: var(colorx, 1);

      &:hover
        box-shadow: 0px 3px 12px 0px var(colorx, .4);
